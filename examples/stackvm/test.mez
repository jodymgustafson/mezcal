import "../../../libs/conversion.lib.mez"

let a$ = ""
while a$ <> "q" begin
  a$ = input("Convert from celsius or fahrenheit or quit (c/f/q)?")

  if a$ == "f" then begin
    let f = input("Fahrenheit:")
    let c = convert_f2c(f)
    print("Celsius: " + c)
  end
  else if a$ == "c" then begin
    let c = input("Celsius:")
    let f = convert_c2f(c)
    print("Fahrenheit: " + f)
  end
  else if a$ <> "q" then print("Invalid command: " + a$)
end

print("Bye!")